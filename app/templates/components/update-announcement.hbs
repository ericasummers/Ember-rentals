{{#if updateAnnouncementForm}}
  <h3>Update this announcement</h3>
  <form>
    <div class="form-group">
      <label for="name">Announcement</label>
      {{input value=name id="name" placeholder=announcement.name}}
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      {{input value=date id="date" placeholder=announcement.date type="date"}}
    </div>

    <button {{action 'update' announcement}}>Save</button>
  </form>
{{else}}
  <button {{action 'updateAnnouncementForm'}}>Update</button>
{{/if}}
