{{#if addNewAnnouncement}}
<div class="container">
  <form>
    <div class="form-group">
    <label for="name">Enter announcement</label>
    {{input value=name id="name"}}
  </div>
  <div class="form-group">
  <label for="date">Enter date</label>
  {{input value=date id="date" type="date"}}
</div>
<button {{action 'saveAnnouncement'}} class="btn"> Save</button>
  </form>
</div>
{{else}}
<button {{action 'announcementFormShow'}} class="btn">Add new announcement</button>
{{/if}}
